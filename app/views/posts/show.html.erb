<div class="container-lg">
  <div class="post-header">
    <h1>
      <%= @post.title %>
    </h1>
  </div>

  <div class="post-infos">
    <%= @post.description %>
    <p class="user-info">
      <span>Author <%= link_to "#{@post.user.name}", user_path(@post.user) %></span>
      <time><%= @post.updated_at.strftime("%Y年%m月%d日") %></time>
    </p>
  </div>

  <section class="content">
    <%= render_html_with_lazyload(@post.content) %>
  </section>
</div>
