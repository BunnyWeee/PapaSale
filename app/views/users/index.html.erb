<h1>User list</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Gender</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope='row'><%= user.id %></th>
        <td> <%= user.name %> </td>
        <td> <%= user.email %> </td>
        <td> <%= user.gender %> </td>
        <td> <%= link_to 'edit', edit_user_path(user) %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
