<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" },
                wrapper: :floating_labels_form %>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" },
                wrapper: :floating_labels_form %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" },
                wrapper: :floating_labels_form %>

    <%= f.input :name, label: '姓名', wrapper: :floating_labels_form %>

    <%= f.input :gender,
                label: '性別',
                as: :select,
                collection: [['0', '女'], ['1', '男']],
                label_method: :second,
                value_method: :first,
                wrapper: :floating_labels_select %>

    <%= f.input :avatar, label: '大頭貼', as: :file, wrapper: :vertical_file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: 'btn btn-success' %>
    <span>
      已有帳號？點我<%= link_to '登入', new_user_session_path %>
    </span>
  </div>

  <div class="form-group">
    <%= flash[:recaptcha_error] %>
    <%= recaptcha_tags %>
  </div>
<% end %>
